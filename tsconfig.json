{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "module": "ES6",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./",
    "target": "ES6",
    "sourceMap": true,
    "lib": ["ES2015", "DOM"],
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
